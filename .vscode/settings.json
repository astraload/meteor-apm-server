{
    "search.exclude": {
        "**/node_modules": true,
        "**/.meteor/local": true
    },
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules": true,
        "**/bower_components": true,
        "**/.meteor/local": true
    },
    "editor.formatOnSave": true,
    "[markdown]": {
        "editor.formatOnSave": false
    }
}